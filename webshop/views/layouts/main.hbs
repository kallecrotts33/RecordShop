<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">Kalles Record Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" id="currentInCart" href="/cart"></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="flex-grow-1">
        {{{body}}}
    </main>
    <footer>
        <div class="text-center py-3 bg-light mt-5">
            <p>&copy; Karl Crotts</p>
        </div>
    </footer>
</body>

</html>

<script>
    function updateCartCount() {
        const cartKeys = Object.keys(sessionStorage).filter(key => key.startsWith("record_"));
        const totalCount = cartKeys.reduce((total, key) => {
            const qty = parseInt(sessionStorage.getItem(key)) || 0;
            return total + qty;
        }, 0);
        const cartElement = document.getElementById('currentInCart');
        if (cartElement) {
            cartElement.textContent = `Cart (${totalCount})`;
        }
    }
    document.addEventListener('DOMContentLoaded', updateCartCount);
</script>